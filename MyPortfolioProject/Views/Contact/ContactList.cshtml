@model List<Contact>

@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Bilgileri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Bilgileri Detay</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim Bilgileri ile ilgili işlemleri aşağıdan yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Tel 1 </th>
                                    <th scope="col">Email 1</th>
                                    <th scope="col">İletişim Detay</th>
                                    @* <th scope="col">Sil</th> *@
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Phone1</td>
                                        <td>@item.Email1</td>
                                        <td><a href="/Contact/ContactDetail/@item.ContactId" class="btn btn-warning">Detaylı Göster</a></td>
                                        @* <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a></td> *@
                                        <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @* <a href="/Contact/CreateContact" class="btn btn-primary">Hakkımda Verisi Ekle</a> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



