@model Contact

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Bilgileri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Bilgisi Güncelleme Paneli</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ContactId" />
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Tel 1</label>
                            <input type="text" asp-for="Phone1" class="form-control" />
                            <br /> 
                            <label>Tel 2</label>
                            <input type="text" asp-for="Phone2" class="form-control" />
                            <br />
                            <label>E-mail 1</label>
                            <input type="text" asp-for="Email1" class="form-control" />
                            <br />
                            <label>E-mail 2</label>
                            <input type="text" asp-for="Email2" class="form-control" />
                            <br />
                            <label>Adres</label>
                            <input type="text" asp-for="Address" class="form-control" />
                            <br />
                            <label>İletişim Detaylı Açıklama</label>
                            <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                            <br />
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-primary">İletişim Verisini Güncelle</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>