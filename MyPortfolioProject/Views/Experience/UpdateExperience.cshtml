@model Experience

@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Güncelleme Paneli</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ExperienceId" />
                            <label>Deneyim Başlığı & Firma Bilgisi</label>
                            <input type="text" asp-for="Head" class="form-control" />
                            <br />
                            <label>Unvan Bilgisi</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Çalışma Tarihi</label>
                            <input type="text" asp-for="Date" class="form-control" />
                            <br />
                            <label>Deneyim Başlığı & Firma Bilgisi</label>
                            <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                            <br />
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-warning">Deneyim Güncelle</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>