@model List<Portfolio>

@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Bilgileri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Bilgileri Detay</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim Bilgileri ile ilgili işlemleri aşağıdan yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Başlık</th>
                                    <th scope="col">Portfolyo Bağlantı</th>
                                    <th scope="col">Portfolyo Resim(URL)</th>
                                    <th scope="col">Portfolyo Açıklama</th>
                                    @* <th scope="col">İletişim Detay</th> *@
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td>@item.Url</td>
                                        <td>@item.ImgUrl</td>
                                        <td>@item.Description</td>
                                        @* <td><a href="/Portfolio/PortfolioDetail/@item.PortfolioId" class="btn btn-warning">Detaylı Göster</a></td> *@
                                        <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-end">
                            <a href="/Portfolio/CreatePortfolio" class="btn btn-primary">Portolyo Verisi Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





