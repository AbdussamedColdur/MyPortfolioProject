@model Skill

@{
    ViewData["Title"] = "CreateSkill";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Bilgileri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Bilgisi Güncelleme Paneli</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Yetenek</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Değer</label>
                            <input type="text" asp-for="Value" class="form-control" />
                            <br />
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-primary">Yeteneği Ekle</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



