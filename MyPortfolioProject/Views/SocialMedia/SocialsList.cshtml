@model List<SocialMedia>

@{
    ViewData["Title"] = "SocialsList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medyalar</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Sosyal Medya ile ilgili işlemleri aşağıdan yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Platform</th>
                                    <th scope="col">Bağlantı</th>
                                    <th scope="col">İkon URL</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Url</td>
                                        <td>@item.Icon</td>
                                        <td><a href="/SocialMedia/DeleteSocial/@item.SocialMediaId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/SocialMedia/UpdateSocial/@item.SocialMediaId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/SocialMedia/CreateSocial" class="btn btn-primary">Sosyal Medya Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>