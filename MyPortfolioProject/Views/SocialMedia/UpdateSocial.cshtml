@model SocialMedia

@{
    ViewData["Title"] = "UpdateSocial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Güncelleme Paneli</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="SocialMediaId" />
                            <label>Platform</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Bağlantı</label>
                            <input type="text" asp-for="Url" class="form-control" />
                            <br />
                            <label>Icon Url</label>
                            <textarea rows="4" asp-for="Icon" class="form-control"></textarea>
                            <br />
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-primary">Sosyal Medya Güncelle</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

